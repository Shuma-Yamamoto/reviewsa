<div class="mt-3">
  <h2>参考書を探す</h2>
</div>

<div class="card mt-4">
  <h3 class="card-header">英語</h3>
  <div class="card-body">
    <% @subjects[0..6].each do |sub| %>
      <%= link_to subject_path(id:sub.id), class: "text-decoration-none" do %>
        <div class="d-grid col-11 mx-auto mb-2">
          <button class="btn btn-outline-primary" type="button">
            <div align="center"><%= sub.name %></div>
          </button>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

