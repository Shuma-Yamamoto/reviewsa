<div class="mt-3">
  <h2>受験生ユーザ登録</h2>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "examinees/shared/error_messages", resource: resource %>

  <div class="field mt-4">
    <%= f.label :email, "メールアドレス" %>
    <nobr class="badge rounded-pill bg-danger" style="font-size: .4em; translate: 0px -2px;">必須</nobr><br>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field mt-3">
    <%= f.label :password, "パスワード（※半角英数字6文字以上）" %>
    <nobr class="badge rounded-pill bg-danger" style="font-size: .4em; translate: 0px -2px;">必須</nobr><br>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field mt-3">
    <%= f.label :password_confirmation, "パスワード確認" %>
    &nbsp;<nobr class="badge rounded-pill bg-danger" style="font-size: .4em; translate: 0px -2px;">必須</nobr><br>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field mt-3">
    <%= f.label :name, "ニックネーム" %>
    &nbsp;<nobr class="badge rounded-pill bg-danger" style="font-size: .4em; translate: 0px -2px;">必須</nobr><br>
    <%= f.text_field :name %>
  </div>

  <div class="mt-3">
    <div>
      学年
      &nbsp;<nobr class="badge rounded-pill bg-danger" style="font-size: .4em; translate: 0px -2px;">必須</nobr>
    </div>
    <div class="mt-1">
      <%= f.label :grade, '高校1年', value: 'first' %>
      <%= f.radio_button :grade, 'first' %>
    </div>

    <div class="mt-1" align="left">
      <%= f.label :grade, '高校2年', value: 'second' %>
      <%= f.radio_button :grade, 'second' %>
    </div>

    <div class="mt-1" align="left">
      <%= f.label :grade, '高校3年', value: 'third' %>
      <%= f.radio_button :grade, 'third' %>
    </div>

    <div class="mt-1" align="left">
      <%= f.label :grade, '浪人生', value: 'ronin' %>
      <%= f.radio_button :grade, 'ronin' %>
    </div>
  </div>

  <div class="actions mt-4">
    <%= f.submit "ユーザ登録" %>
  </div>
<% end %>

<div class="mt-2 mb-2">
  <%= render "examinees/shared/links" %>
</div>
