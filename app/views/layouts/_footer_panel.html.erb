<div class="card border-secondary rounded-0" style="width: 100%;">
  <%= link_to link, class: "text-decoration-none text-dark" do %>
    <div class="card-body">
      <p class="card-text" align="center">
        <%= image_tag asset_path(image), height: "25px", class: "d-inline-block align-top", alt: alt %>
      </p>
    </div>
  <% end %>
</div>
