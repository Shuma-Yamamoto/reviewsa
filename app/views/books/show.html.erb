<div class="mt-3">
  <h2><%= @book.name %></h2>
</div>

<div class="mt-4">
  <h4>この参考書について</h4>
</div>

<div class="mt-2">
  価格：<%= @book.price %>円
</div>

<div class="mt-1">
  <%= link_to '参考書詳細', @book.url, target: :_blank, rel: "noopener noreferrer" %>
</div>

<div class="mt-4">
  <h4>この参考書のレビュー</h4>
</div>

<% if @reviews.present? %>
  <% @reviews.each do |r| %>
    <div class="card border-dark mb-3" style="width: 100%;">
      <%= link_to review_path(id:r.id), class: "text-decoration-none text-dark" do %>
        <div class="mt-1 mb-1 ms-2">
          総合評価（5段階）：
          <% r.evaluation.times do %>
            ★
          <% end %><br>
          <%= r.university_student.university.full_name %>&nbsp;
          <%= r.university_student.name %>さんのレビュー
        </div>
      <% end %>
    </div>
  <% end %>

  <div class="mt-4">
    <%= paginate @reviews %>
  </div>
<% else %>
  <p class="mt-2">この参考書には、まだレビューがないようです。</p>
<% end %>

<%= render 'layouts/footer_after_auth' %>
