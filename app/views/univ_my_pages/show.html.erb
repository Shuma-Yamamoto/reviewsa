<div class="mt-3">
  <h2>マイページ</h2>
</div>

<h4 class="mt-4">
  <%= @univ.name %>さんのプロフィール
</h4>

<h5 class="mt-4">
  大学について
</h5>

<div class="mt-2">
  大学：<%= @univ.university.name %>&nbsp;
  <%= @univ.university.faculty %>学部&nbsp;
  <%= @univ.university.department %>学科
</div>

<div class="mt-2">
  入学年度：<%= @univ.entrance_at %>年
</div>

<div class="mt-2">
  受験科目：
  <% @exam.each do |e| %>
    <div class="mb-1">
      <%= e.subject.name %>
    </div>
  <% end %>
</div>

<div class="mt-2">
  合格ステータス：<%= @univ.ronin %>
</div>

<h5 class="mt-4">
  高校について
</h5>

<div class="mt-2">
  高校：<%= @univ.high_school.name %>（<%= @univ.anonymous_high_school %>）
</div>

<div class="mt-2">
  部活の入部時期：<%= @univ.join_club_at %>
</div>

<div class="mt-2">
  部活の退部/引退時期：<%= @univ.leave_club_at %>
</div>

<div class="mt-2">
  部活の活動頻度：週<%= @univ.club_frequency %>回
</div>

<div class="mt-4">
  通っていた塾：<%= @cram.cram_school.name %>
</div>

<div class="mt-2">
  入塾時期：<%= @cram.join_at %>
</div>

<div class="mt-2">
  退塾/卒塾時期：<%= @cram.leave_at %>
</div>

<h4 class="mt-4">
  <%= @univ.name %>さんのレビュー
</h4>

<% @reviews.each do |r| %>
  <div class="card border-dark mb-3" style="width: 100%;">
    <%= link_to edit_review_path(id:r.id), class: "text-decoration-none text-dark" do %>
      <div class="mt-1 mb-1 ms-2">
        「<%= r.book.name %>」のレビュー
        <% if r.university_student_id == current_university_student.id %>
          <div class="d-flex justify-content-left mt-1">
            <%= link_to "編集", edit_review_path(id:r.id), class: 'btn btn-primary mr-3' %>&nbsp;
            <%= button_to "削除", review_path(r.id), method: :delete, class: 'btn btn-danger' %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
<% end %>

<div class="mt-4">
  <%= paginate @reviews %>
</div>

<div class="mt-4">
  <%= render 'layouts/footer' %>
</div>
